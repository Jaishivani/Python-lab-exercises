char = input("Enter a character: ")
    vowels = 'aeiouAEIOU'
    
    if len(char) == 1 and char.isalpha():
        if char in vowels:
            print("The character is a Vowel.")
        else:
            print("The character is a Consonant.")
    else:
        print("Invalid input. Please enter a single alphabetic character.")
